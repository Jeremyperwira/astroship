---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Fitur",
    path: "#",
    children: [
      { title: "Neraca Pangan", path: "/" },
      { title: "Panel Harga", path: "#" },
      { title: "Ketahanan Pangan (FSVA)", path: "#" },
      { title: "Statistik", path: "/404" },
    ],
  },
  {
    title: "Integrasi",
    badge1: true,
    path: "/pricing",
  },
  {
    title: "Tentang",
    path: "/about",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Hubungi Kami",
    path: "/contact",
  },
  {
    title: "Coba Gratis",
    badge2: true,
    path: "https://jeremyperwira.vercel.app/",
  }
  ,
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-slate-800">Pasar</span><span
            class="text-slate-500">Ku</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge1 && (
                        <span class="ml-1 px-2 py-0.5 text-[8px] animate-pulse font-semibold uppercase text-white bg-purple-500 rounded-full">
                          Promo
                        </span>
                        // 
                        
                      )}
                      {item.badge2 && (
                        <span class="ml-1 px-2 py-0.5 text-[8px] animate-pulse font-semibold uppercase text-white bg-orange-500 rounded-full">
                          Baru
                        </span>
                        // 
                        
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link href="https://jeremyperwira.vercel.app/" style="muted" block size="md">Log in</Link>
          <Link href="https://jeremyperwira.vercel.app/" size="md" block>Sign up</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <a href="https://pasarku-test1.vercel.app/sign-in">Log in</a>
        <Link href="https://pasarku-test1.vercel.app/sign-up/" size="md">Sign up</Link>
      </div>
    </div>
  </header>
</Container>
